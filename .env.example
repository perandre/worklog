# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-random-secret-here

# Google OAuth
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret

# Slack OAuth (for per-user authentication)
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# Slack (optional fallback - single workspace token)
# SLACK_USER_TOKEN=xoxp-your-token

# Trello (board/card activity)
TRELLO_API_KEY=your-trello-api-key
# Optional: static personal token if you don't want to use the Connect Trello flow
# TRELLO_TOKEN=your-trello-token
TRELLO_APP_NAME=Worklog
